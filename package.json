{
  "name": "inertia-prime",
  "version": "0.1.0",
  "private": true,
  "description": "Production-ready React component library for Laravel + Inertia.js applications.",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "dev:docs": "turbo run dev --filter=docs",
    "dev:playground": "turbo run dev --filter=playground",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "release": "changeset version && changeset publish"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/inertia-prime/inertia-prime.git"
  },
  "bugs": {
    "url": "https://github.com/inertia-prime/inertia-prime/issues"
  },
  "homepage": "https://github.com/inertia-prime/inertia-prime#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  }
}
